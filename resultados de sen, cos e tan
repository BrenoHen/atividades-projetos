# digite um angulo e mostre o seno, cosseno e tangente desse angulo
# biblioteca de matemática
# python3

from math import radians, sin, cos, tan
print('--'*15)
angulo = float(input('Digite o valor do ângulo: '))
print('--')*15)
print(f'Os valores abaixo são os resultados de seno, cosseno e tangente de {angulo}')
seno = sin(radians(angulo))
print(f'O seno é {seno:.2f}')
cosseno = cos(radians(angulo))
print(f'O cosseno é {cosseno:.2f}')
tangente = tan(radians(angulo))
print(f'A tangente é {tangente:.2f}')
